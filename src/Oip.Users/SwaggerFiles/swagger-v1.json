{
  "openapi": "3.0.1",
  "info": {
    "title": "Oip service web-api",
    "description": "Oip service web-api",
    "version": "v1.0.0"
  },
  "paths": {
    "/api/users/get-all-users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Gets a list of users with pagination",
        "parameters": [
          {
            "name": "skip",
            "in": "query",
            "description": "Number of records to skip",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "take",
            "in": "query",
            "description": "Number of records to take",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserEntity"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserEntity"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserEntity"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/get-user": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Gets a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "User ID",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/UserEntity"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserEntity"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserEntity"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/get-user-by-keycloak-id": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Gets a user by Keycloak ID",
        "parameters": [
          {
            "name": "keycloakId",
            "in": "query",
            "description": "Keycloak user ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/UserEntity"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserEntity"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserEntity"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/search-user": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Searches users by search term",
        "parameters": [
          {
            "name": "term",
            "in": "query",
            "description": "Search term",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserEntity"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserEntity"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserEntity"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/sync-user": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Synchronizes a user from Keycloak",
        "requestBody": {
          "description": "Request with Keycloak user ID",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SyncUserRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SyncUserRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SyncUserRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/users/sync-all-users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Starts synchronization of all users from Keycloak",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SyncUserRequest": {
        "type": "object",
        "properties": {
          "keycloakUserId": {
            "type": "string",
            "description": "The unique identifier of the user in Keycloak",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Represents a request to synchronize a user from Keycloak"
      },
      "UserEntity": {
        "required": [
          "email"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "description": "User id",
            "format": "int32"
          },
          "keycloakId": {
            "type": "string",
            "description": "Gets or sets the Keycloak identifier for the user.",
            "nullable": true
          },
          "email": {
            "type": "string",
            "description": "E-mail",
            "nullable": true
          },
          "firstName": {
            "type": "string",
            "description": "First name",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "description": "Last name",
            "nullable": true
          },
          "isActive": {
            "type": "boolean",
            "description": "Indicates whether the user is active"
          },
          "createdAt": {
            "type": "string",
            "description": "Creation date and time",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "description": "Last update date and time",
            "format": "date-time"
          },
          "lastSyncedAt": {
            "type": "string",
            "description": "Last synchronization date and time",
            "format": "date-time"
          },
          "photo": {
            "type": "string",
            "description": "User photo",
            "format": "byte",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "User entity"
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme. \\r\\n\\r\\n \n                      Enter 'Bearer' [space] and then your token in the text input below.\n                      \\r\\n\\r\\nExample: 'Bearer 12345abcdef'",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}