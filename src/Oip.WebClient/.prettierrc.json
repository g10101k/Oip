{
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "none",
  "semi": true,
  "printWidth": 120,
  "bracketSameLine": true,
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.mts",
        "*.d.ts"
      ],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": [
        "*.html"
      ],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": [
        "*.component.html"
      ],
      "options": {
        "parser": "angular"
      }
    }
  ]
}
